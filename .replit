
run = "npm run dev"
modules = ["nodejs-20"]
hidden = [".config", "package-lock.json"]

[nix]
channel = "stable-24_05"

[deployment]
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "PORT=80 node src/server.js"]
publicDir = "dist"

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[[ports]]
localPort = 3000
externalPort = 80

[workflows]
runButton = "Start Server"

[[workflows.workflow]]
name = "Start Server"
author = 25716522
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/server.js"
